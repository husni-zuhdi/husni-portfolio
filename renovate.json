{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
  {
    "matchFileNames": ["Dockerfile"],
    "description": "Ignore Dockerfile",
    "enabled": false
  },
  {
    "matchFileNames": ["build/*"],
    "description": "Ignore Docker-compose",
    "enabled": false
  },
  {
    "matchFileNames": [".github/*"],
    "description": "Ignore Github Action",
    "enabled": false
  }
  ]
}
